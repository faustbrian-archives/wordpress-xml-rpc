{
    "name": "plients/wordpress-xml-rpc",
    "description": "A WordPress XML-RPC Client for PHP",
    "keywords": [
        "api",
        "http",
        "wordpress xml-rpc"
    ],
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@basecode.sh",
            "homepage": "https://basecode.sh"
        }
    ],
    "require": {
        "php": "^7.1",
        "faustbrian/http": "^1.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Plients\\WordPressXmlRpc\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plients\\Tests\\WordPressXmlRpc\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
